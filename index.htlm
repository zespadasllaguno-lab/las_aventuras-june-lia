<script>
  // Part칤culas m치gicas
  const particulas = document.querySelector('.particulas');
  for(let i=0; i<80; i++){
    let p = document.createElement('div');
    p.classList.add('particula');
    p.style.left = Math.random() * 100 + 'vw';
    p.style.animationDuration = 3 + Math.random() * 5 + 's';
    p.style.width = 5 + Math.random()*12 + 'px';
    p.style.height = p.style.width;
    particulas.appendChild(p);
  }

  // Bot칩n de rese침as
  const btnRese침a = document.getElementById('btn-rese침a');
  const inputRese침a = document.getElementById('input-rese침a');
  const listaRese침as = document.getElementById('lista-rese침as');

  btnRese침a.addEventListener('click', () => {
    const texto = inputRese침a.value.trim();
    if(texto!==''){
      const div = document.createElement('div');
      div.textContent = texto;
      div.style.background = '#ffccf0';
      div.style.padding = '10px';
      div.style.borderRadius = '10px';
      div.style.marginBottom = '10px';
      listaRese침as.appendChild(div);

